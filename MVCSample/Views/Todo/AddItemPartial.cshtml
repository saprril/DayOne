@model TodoItem
<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title">
    <button type="submit">Add</button>
    <label asp-for="DueAt">Due At:</label>
    <input asp-for="DueAt" type="datetime-local" min="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")"/>
</form>